<% layout("./layouts/boilerplate") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const coordinates = <%- JSON.stringify(listings.geometry.coordinates) %>;
    const listing = <%- JSON.stringify(listings) %>
</script>
    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3><%= listings.title %></h3>
</div>
<div class="card col-6 offset-3 show-card listing-card">
    
        <img src="<%- listings.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
            <p class="card-text"><b><i>Owned by: <%=listings.owner.username %></i></b></p>
            <p class="card-text"><%=listings.description %><br></p>
            <p class="card-text">â‚¹<%=listings.price%><br></p>
            <p class="card-text"><%=listings.location%><br></p>
            <p class="card-text"><%=listings.country%><br></p>
        
            
            </div>
    
    </div>
    <br />

    <% if(currUser && listings.owner._id.equals(currUser._id)) { %>
     <div class="btns ">
        <a href="/listings/<%=listings._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
        
        <form method="post" action="/listings/<%=listings._id%>?_method=DELETE">

            <button class="btn btn-dark delete-btn offset-5">Delete</button>
        </form>
    </div>
    <% } %>



    <!-- Review Form-->
    
    <div class="col-8 offset-3 mb-3">
        <% if(currUser) {%>
            <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listings.id%>/reviews" method="POST" novalidate class="needs-validation">
            
            <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">

            <input type="radio" id="rate1" name="review[rating]" value="1">
            <label for="rate1" title="Terrible">1 star</label>

            <input type="radio" id="rate2" name="review[rating]" value="2">
            <label for="rate2" title="Bad">2 stars</label>

            <input type="radio" id="rate3" name="review[rating]" value="3">
            <label for="rate3" title="Okay">3 stars</label>

            <input type="radio" id="rate4" name="review[rating]" value="4">
            <label for="rate4" title="Good">4 stars</label>

            <input type="radio" id="rate5" name="review[rating]" value="5">
            <label for="rate5" title="Excellent">5 stars</label>
            </fieldset>
            </div>


            <div class="mb-3 mt-3"> 
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review
                </div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr/>
        <% } %>



        
           
        <% if(listings.reviews.length > 0) { %>
        <div class="row">
        <p class="mt-3"><b>All Reviews</b></p>

            <% for(review of listings.reviews) {%>
                <div class="card col-5 mb-3 ms-3"> 
                     <div class="card-body">
                        <h5 class="card-title"><%=review.author.username%></h5>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <p class="card-text"> <%= review.comment %> </p>
                        
                        <form class="mb-3" method="POST" action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <% if(currUser && listings.owner._id.equals(currUser._id)) { %>
                                <button class="btn btn-dark btn-sm">Delete</button>
                            <% } %>


                        </form>
                     </div> 
                </div>
           <%  } %>
        </div>
        <%  } %>
        

       
    </div>
    <div class="col-6 offset-3 mb-3">
            <h3>Where you'll be</h3>
            <div id="map"></div>
    </div>
</div> 


<script src="/js/map.js"></script>